        font-family: var(--font-body);
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 0.25em;
        text-transform: uppercase;
        color: var(--color-white);
        margin-bottom: 8px;
      }
      .footer-tagline {
        font-size: 13px;
        color: var(--color-text-muted);
        letter-spacing: 0.05em;
      }
      .footer-links {
        display: flex;
        justify-content: center;
        gap: 32px;
        margin-bottom: 48px;
        flex-wrap: wrap;
      }
      .footer-links a {
        font-size: 12px;
        font-weight: 500;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--color-text-muted);
        transition: color 0.2s ease;
      }
      .footer-links a:hover { color: var(--color-white); }
      .footer-bottom {
        text-align: center;
        padding-top: 32px;
        border-top: 1px solid var(--color-border);
      }
      .footer-tech-btn {
        font-size: 13px;
        font-weight: 400;
        color: var(--color-text-subtle);
        background: none;
        border: none;
        text-decoration: underline;
        text-underline-offset: 3px;
        transition: color 0.2s ease;
      }
      .footer-tech-btn:hover { color: var(--color-text-muted); }
      .footer-tech-panel {
        max-height: 0;
        opacity: 0;
        overflow: hidden;
        transition: max-height 0.4s ease, opacity 0.3s ease;
        margin-top: 20px;
        text-align: left;
        max-width: 560px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 24px;
        border: 1px solid transparent;
      }
      .footer-tech-panel.is-open {
        max-height: 600px;
        opacity: 1;
        padding: 24px;
        border-color: var(--color-border);
        background: var(--color-bg-card);
      }
      .footer-tech-title {
        font-family: var(--font-display);
        font-size: 1.25rem;
        color: var(--color-white);
        margin-bottom: 12px;
      }
      .footer-tech-intro {
        font-size: 14px;
        color: var(--color-text-muted);
        margin-bottom: 16px;
        line-height: 1.6;
      }
      .footer-tech-list {
        margin-bottom: 20px;
        padding-left: 20px;
        list-style: disc;
      }
      .footer-tech-list li {
        font-size: 14px;
        line-height: 1.6;
        color: var(--color-text-muted);
        margin-bottom: 8px;
      }
      .footer-tech-close {
        padding: 10px 24px;
        font-size: 11px;
        font-weight: 500;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--color-white);
        background: none;
        border: 1px solid var(--color-border-hover);
        transition: border-color 0.2s ease, background 0.2s ease;
      }
      .footer-tech-close:hover {
        border-color: var(--color-white);
        background: var(--color-white);
        color: #000;
      }

      /* ===== CHAT WIDGET ===== */
      .chat-widget {
        position: fixed;
        bottom: 24px;
        right: 24px;
        z-index: 120;
      }
      .chat-toggle {
        position: relative;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-accent);
        border: none;
        border-radius: 50%;
        color: var(--color-bg);
        box-shadow: 0 4px 24px rgba(191,163,107,0.35);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        cursor: pointer;
      }
      .chat-toggle:hover {
        transform: scale(1.08);
        box-shadow: 0 6px 32px rgba(191,163,107,0.5);
      }
      /* Pulse ring */
      .chat-toggle-ring {
        position: absolute;
        inset: -4px;
        border-radius: 50%;
        border: 2px solid var(--color-accent);
        opacity: 0;
        animation: chatPulse 2.5s ease-out infinite;
        pointer-events: none;
      }
      .chat-widget.is-open .chat-toggle-ring { display: none; }
      @keyframes chatPulse {
        0%   { opacity: 0.6; transform: scale(1); }
        100% { opacity: 0;   transform: scale(1.45); }
      }
      /* Label */
      .chat-label {
        position: absolute;
        bottom: 8px;
        right: 72px;
        white-space: nowrap;
        font-size: 0.8rem;
        font-weight: 500;
        letter-spacing: 0.02em;
        color: var(--color-white);
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        padding: 8px 14px;
        border-radius: 8px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.4);
        opacity: 0;
        transform: translateX(8px);
        animation: chatLabelIn 0.5s ease 2s forwards;
        pointer-events: none;
      }
      .chat-label::after {
        content: '';
        position: absolute;
        right: -6px;
        top: 50%;
        transform: translateY(-50%) rotate(45deg);
        width: 10px;
        height: 10px;
        background: var(--color-bg-card);
        border-right: 1px solid var(--color-border);
        border-top: 1px solid var(--color-border);
      }
      .chat-widget.is-open .chat-label,
      .chat-label.is-hidden { display: none; }
      @keyframes chatLabelIn {
        to { opacity: 1; transform: translateX(0); }
      }
      .chat-toggle-icon { width: 26px; height: 26px; }
      .chat-toggle-icon--close { display: none; }
      .chat-widget.is-open .chat-toggle-icon--open { display: none; }
      .chat-widget.is-open .chat-toggle-icon--close { display: block; }
      .chat-panel {
        position: absolute;
        bottom: 68px;
        right: 0;
        width: 380px;
        background: rgba(10,10,12,0.96);
        backdrop-filter: blur(20px);
        border: 1px solid var(--color-border);
        box-shadow: 0 24px 64px rgba(0,0,0,0.5);
        display: none;
        flex-direction: column;
      }
      .chat-widget.is-open .chat-panel {
        display: flex;
      }
      .chat-panel-header {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 16px 20px;
        border-bottom: 1px solid var(--color-border);
      }
      .chat-minimize-btn {
        margin-left: auto;
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: none;
        border: none;
        color: var(--color-text-muted);
        padding: 0;
        transition: color 0.2s ease;
      }
      .chat-minimize-btn:hover { color: var(--color-white); }
      .chat-minimize-btn svg { width: 16px; height: 16px; }
      .chat-panel-title {
        font-size: 11px;
        font-weight: 500;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--color-text-muted);
      }
      .chat-panel-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: #4ade80;
      }
      .chat-messages {
        min-height: 200px;
        max-height: 300px;
        overflow-y: auto;
        padding: 16px 20px;
      }
      .chat-msg { display: flex; margin-bottom: 10px; }
      .chat-msg:last-child { margin-bottom: 0; }
      .chat-msg--user { justify-content: flex-end; }
      .chat-bubble {
        max-width: 85%;
        padding: 10px 14px;
        font-size: 0.9rem;
        line-height: 1.55;
        color: var(--color-text);
        background: rgba(255,255,255,0.06);
      }
      .chat-msg--user .chat-bubble {
        background: rgba(200,169,110,0.15);
        border: 1px solid rgba(200,169,110,0.25);
      }
      .chat-suggestions {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        padding: 0 20px 12px;
      }
      .chat-suggestions.is-hidden { display: none; }
      .chat-suggestion-btn {
        padding: 6px 12px;
        font-size: 11px;
        font-weight: 500;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        color: var(--color-accent);
        background: none;
        border: 1px solid rgba(200,169,110,0.3);
        transition: background 0.2s ease, border-color 0.2s ease;
      }
      .chat-suggestion-btn:hover {
        background: rgba(200,169,110,0.1);
        border-color: var(--color-accent);
      }
      .chat-form {
        display: flex;
        align-items: center;
        gap: 0;
        padding: 12px 20px;
        border-top: 1px solid var(--color-border);
      }
      .chat-input {
        flex: 1;
        padding: 10px 12px;
        display: block;
        box-sizing: border-box;
        background: transparent;
        border: none;
        color: var(--color-text);
        font-size: 0.9rem;
        font-family: inherit;
        resize: none;
        min-height: calc(1.5em + 20px);
        max-height: 7.5em;
        line-height: 1.5;
        overflow-y: auto;
        overflow-x: hidden;
      }
      .chat-input:focus { outline: none; }
      .chat-input::placeholder { color: var(--color-text-subtle); }
      .chat-send-btn {
        flex-shrink: 0;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: none;
        border: none;
        color: var(--color-accent);
        transition: color 0.2s ease;
      }
      .chat-send-btn:hover { color: var(--color-white); }
      .chat-send-btn svg { width: 18px; height: 18px; }
      .chat-status {
        min-height: 16px;
        padding: 0 20px 12px;
        font-size: 12px;
        color: var(--color-text-subtle);
      }
      .chat-dots {
        display: inline-flex;
        align-items: center;
        gap: 4px;
      }
      .chat-dots span {
        width: 5px;
        height: 5px;
        border-radius: 50%;
        background: currentColor;
        animation: chatDot 1.4s ease-in-out infinite both;
      }
      .chat-dots span:nth-child(2) { animation-delay: 0.2s; }
      .chat-dots span:nth-child(3) { animation-delay: 0.4s; }
      @keyframes chatDot {
        0%, 80%, 100% { opacity: 0.3; transform: scale(0.85); }
        40% { opacity: 1; transform: scale(1); }
      }

      @media (max-width: 640px) {
        .chat-widget { bottom: 16px; right: 16px; }
        .chat-panel { width: calc(100vw - 32px); right: 0; }
        .chat-toggle { width: 52px; height: 52px; }
        .chat-label { display: none; }
      }

      /* ===== CONTACT MODAL ===== */
      .contact-overlay {
        position: fixed;
        inset: 0;
        z-index: 200;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: rgba(0,0,0,0.8);
        backdrop-filter: blur(8px);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.4s var(--ease), visibility 0.4s var(--ease);
      }
      .contact-overlay.is-open {
        opacity: 1;
        visibility: visible;
      }
      .contact-modal {
        width: 100%;
        max-width: 480px;
        padding: 48px 40px;
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        position: relative;
      }
      .contact-modal-close {
        position: absolute;
        top: 16px;
        right: 16px;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: none;
        border: none;
        color: var(--color-text-muted);
        transition: color 0.2s ease;
      }
      .contact-modal-close:hover { color: var(--color-white); }
      .contact-modal-close svg { width: 20px; height: 20px; }
      .contact-modal-label {
        font-size: 11px;
        font-weight: 500;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        color: var(--color-accent);
        margin-bottom: 8px;
      }
      .contact-modal-title {
        font-family: var(--font-display);
        font-size: 1.8rem;
        font-weight: 400;
        color: var(--color-white);
        margin-bottom: 32px;
      }
      .contact-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
      }
      .contact-label {
        display: flex;
        flex-direction: column;
        gap: 8px;
      }
      .contact-label-text {
        font-size: 11px;
        font-weight: 500;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--color-text-muted);
      }
      .contact-input, .contact-textarea {
        padding: 14px 16px;
        font-size: 14px;
        font-family: inherit;
        color: var(--color-text);
        background: rgba(255,255,255,0.04);
        border: 1px solid var(--color-border);
        transition: border-color 0.2s ease;
      }
      .contact-input:focus, .contact-textarea:focus {
        outline: none;
        border-color: var(--color-accent);
      }
      .contact-input::placeholder, .contact-textarea::placeholder { color: var(--color-text-subtle); }
      .contact-textarea { resize: vertical; min-height: 100px; }
      .contact-actions { margin-top: 8px; }
      .contact-submit-btn {
        width: 100%;
        padding: 16px;
        font-size: 12px;
        font-weight: 500;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: #000;
        background: var(--color-white);
        border: 1px solid var(--color-white);
        transition: background 0.2s ease, color 0.2s ease;
      }
      .contact-submit-btn:hover {
        background: var(--color-accent);
        border-color: var(--color-accent);
        color: #000;
      }
      .contact-feedback {
        margin-top: 16px;
        font-size: 14px;
        text-align: center;
      }
      .contact-feedback.is-success { color: #4ade80; }
      .contact-feedback.is-error { color: #f87171; }

      /* ===== SCROLLBAR ===== */
      ::-webkit-scrollbar { width: 6px; }
      ::-webkit-scrollbar-track { background: transparent; }
      ::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.12); border-radius: 3px; }
      ::-webkit-scrollbar-thumb:hover { background: rgba(255,255,255,0.2); }

      /* ===== SELECTION ===== */
      ::selection { background: rgba(200,169,110,0.3); color: var(--color-white); }
    </style>

  </body>
</html>
