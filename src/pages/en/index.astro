      if (contactForm && contactFeedback) {
        contactForm.addEventListener('submit', function(e) {
          e.preventDefault();
          var fd = new FormData(contactForm);
          var name = fd.get('name') || '';
          var email = fd.get('email') || '';
          var message = fd.get('message') || '';
          contactFeedback.hidden = false;
          contactFeedback.className = 'contact-feedback';
          contactFeedback.textContent = 'Sending…';
          fetch('/api/contact', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name: name, email: email, message: message }),
          })
          .then(function(res) { return res.json().then(function(data) { return { ok: res.ok, data: data }; }); })
          .then(function(r) {
            if (r.ok) {
              contactFeedback.textContent = "Message sent. I'll get back to you shortly.";
              contactFeedback.classList.add('is-success');
              contactForm.reset();
            } else {
              contactFeedback.textContent = r.data && r.data.error ? r.data.error : 'An error occurred.';
