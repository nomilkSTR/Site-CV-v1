    <!-- ========== LANGUAGES ========== -->
    <section class="section section--dark" id="languages">
      <div class="section-inner section-inner--narrow">
        <p class="section-label anim-on-scroll">COMMUNICATION</p>
        <h2 class="section-heading anim-on-scroll" style="transition-delay:.1s">Languages</h2>
        <div class="lang-grid anim-on-scroll" style="transition-delay:.2s">

          <div class="lang-card">
            <div class="lang-card-flag-wrap">
              <svg viewBox="0 0 900 600" aria-hidden="true">
                <rect width="300" height="600" fill="#002395"/>
                <rect x="300" width="300" height="600" fill="#ffffff"/>
                <rect x="600" width="300" height="600" fill="#ED2939"/>
              </svg>
            </div>
            <div class="lang-card-info">
              <h3 class="lang-card-name">French</h3>
              <span class="lang-card-level">Native language</span>
            </div>
            <span class="lang-badge">Native</span>
          </div>

          <div class="lang-card">
            <div class="lang-card-flag-wrap">
              <svg viewBox="0 0 60 30" aria-hidden="true">
                <clipPath id="s"><path d="M0,0 v30 h60 v-30 z"/></clipPath>
                <clipPath id="t"><path d="M30,15 h30 v15 z v15 h-30 z h-30 v-15 z v-15 h30 z"/></clipPath>
                <g clip-path="url(#s)">
                  <path d="M0,0 v30 h60 v-30 z" fill="#012169"/>
                  <path d="M0,0 L60,30 M60,0 L0,30" stroke="#fff" stroke-width="6"/>
                  <path d="M0,0 L60,30 M60,0 L0,30" clip-path="url(#t)" stroke="#C8102E" stroke-width="4"/>
                  <path d="M30,0 v30 M0,15 h60" stroke="#fff" stroke-width="10"/>
                  <path d="M30,0 v30 M0,15 h60" stroke="#C8102E" stroke-width="6"/>
                </g>
              </svg>
            </div>
            <div class="lang-card-info">
              <h3 class="lang-card-name">English</h3>
              <span class="lang-card-level">Fluent</span>
            </div>
