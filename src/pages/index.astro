        if (window.scrollY > 80) {
          nav.classList.add('nav--scrolled');
        } else {
          nav.classList.remove('nav--scrolled');
        }
      }
      window.addEventListener('scroll', updateNav, { passive: true });
      updateNav();

      /* ---- Menu overlay ---- */
      var menuBtn = document.getElementById('nav-menu-btn');
      var menuOverlay = document.getElementById('menu-overlay');
      function openMenu() {
        if (!menuOverlay || !menuBtn) return;
        menuOverlay.classList.add('is-open');
        menuOverlay.setAttribute('aria-hidden', 'false');
        menuBtn.setAttribute('aria-expanded', 'true');
        document.body.style.overflow = 'hidden';
      }
      function closeMenu() {
        if (!menuOverlay || !menuBtn) return;
        menuOverlay.classList.remove('is-open');
        menuOverlay.setAttribute('aria-hidden', 'true');
        menuBtn.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
      }
      if (menuBtn) {
        menuBtn.addEventListener('click', function() {
          var isOpen = menuOverlay && menuOverlay.classList.contains('is-open');
          if (isOpen) closeMenu(); else openMenu();
        });
      }
      document.querySelectorAll('.menu-link').forEach(function(link) {
        link.addEventListener('click', function() { closeMenu(); });
      });
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeMenu();
      });

      /* ---- Scroll-triggered animations ---- */
      var prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      var animEls = document.querySelectorAll('.anim-on-scroll');
      if (prefersReducedMotion) {
        animEls.forEach(function(el) { el.classList.add('is-visible'); });
      } else {
        var scrollObserver = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              scrollObserver.unobserve(entry.target);
            }
          });
        }, { rootMargin: '0px 0px -10% 0px', threshold: 0 });
        animEls.forEach(function(el) { scrollObserver.observe(el); });
      }

      /* ---- Experience cards accordion ---- */
      function setupAccordion(selector) {
        document.querySelectorAll(selector).forEach(function(card) {
          var header = card.querySelector('[aria-expanded]');
          var body = card.querySelector('.exp-card-body, .formation-card-body');
          if (!header || !body) return;
          header.addEventListener('click', function() {
            var isOpen = card.classList.contains('is-open');
            // Close others
            document.querySelectorAll(selector + '.is-open').forEach(function(openCard) {
              if (openCard === card) return;
              openCard.classList.remove('is-open');
              var ob = openCard.querySelector('.exp-card-body, .formation-card-body');
              var oh = openCard.querySelector('[aria-expanded]');
              if (ob) { ob.style.maxHeight = '0'; }
              if (oh) oh.setAttribute('aria-expanded', 'false');
            });
            card.classList.toggle('is-open', !isOpen);
            header.setAttribute('aria-expanded', String(!isOpen));
            if (!isOpen) {
              body.style.maxHeight = body.scrollHeight + 'px';
            } else {
              body.style.maxHeight = '0';
            }
          });
        });
      }
      setupAccordion('.exp-card');
      setupAccordion('.formation-card');

      /* ---- Brand cards toggle ---- */
      document.querySelectorAll('.brand-card-btn').forEach(function(btn) {
        btn.addEventListener('click', function() {
          var card = btn.closest('.brand-card');
          var list = card ? card.querySelector('.brand-card-list') : null;
          if (!card || !list) return;
          var isOpen = card.classList.contains('is-open');
          // Close others
          document.querySelectorAll('.brand-card.is-open').forEach(function(oc) {
            if (oc === card) return;
            oc.classList.remove('is-open');
            var ol = oc.querySelector('.brand-card-list');
            var ob = oc.querySelector('.brand-card-btn');
            if (ol) ol.style.maxHeight = '0';
            if (ob) ob.setAttribute('aria-expanded', 'false');
          });
          card.classList.toggle('is-open', !isOpen);
          btn.setAttribute('aria-expanded', String(!isOpen));
          if (!isOpen) {
            list.style.maxHeight = list.scrollHeight + 'px';
          } else {
            list.style.maxHeight = '0';
          }
        });
      });

      /* ---- Chat widget ---- */
      var chatWidget = document.getElementById('chat-widget');
      var chatToggle = document.getElementById('chat-toggle');
      var chatPanel = document.getElementById('chat-panel');
      var chatForm = document.getElementById('chat-form');
      var chatInput = document.getElementById('chat-input');
      var chatMessages = document.getElementById('chat-messages');
      var chatStatus = document.getElementById('chat-status');
      var chatHistory = [];
      var chatLabel = document.getElementById('chat-label');

      function minimizeChatPanel() {
        if (chatWidget) chatWidget.classList.remove('is-open');
        if (chatToggle) chatToggle.setAttribute('aria-expanded', 'false');
      }
      if (chatToggle && chatPanel) {
        chatToggle.addEventListener('click', function() {
          var isOpen = chatWidget.classList.contains('is-open');
          chatWidget.classList.toggle('is-open', !isOpen);
          chatToggle.setAttribute('aria-expanded', String(!isOpen));
          if (chatLabel) chatLabel.classList.add('is-hidden');
          if (!isOpen && chatInput) {
            requestAnimationFrame(autoResize);
            chatInput.focus();
          }
        });
      }
      var chatMinimize = document.getElementById('chat-minimize');
      if (chatMinimize) {
        chatMinimize.addEventListener('click', minimizeChatPanel);
      }

      function formatChatReply(text) {
        if (!text) return '';
        var escaped = text.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;');
        return escaped.replace(/\n/g, '<br>').replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>').replace(/(<br>|^)\s*\*\s+/g, '$1&bull; ');
      }

      function appendMessage(role, text) {
        if (!chatMessages) return;
        var msg = document.createElement('div');
        msg.className = 'chat-msg chat-msg--' + role;
        var bubble = document.createElement('div');
        bubble.className = 'chat-bubble';
        if (role === 'assistant') {
          bubble.innerHTML = formatChatReply(text);
        } else {
          bubble.textContent = text;
        }
        msg.appendChild(bubble);
        chatMessages.appendChild(msg);
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }

      var welcomeMsg = "Bonjour ! Je suis l'alter ego virtuel de Corentin. Posez-moi une question sur son parcours.";
      appendMessage('assistant', welcomeMsg);
      chatHistory.push({ role: 'assistant', content: welcomeMsg });

      var chatSuggestions = document.getElementById('chat-suggestions');
      var suggestionCv = document.getElementById('chat-suggestion-cv');
      var suggestionRandom = document.getElementById('chat-suggestion-random');
      var randomCvQuestions = [
        'Quelle est ta plus grande réalisation professionnelle ?',
        'Pourquoi avoir choisi le pricing automobile ?',
        'Quelles sont tes compétences en IA ?',
        'Tu peux me parler de ton expérience chez Alcopa ?',
        'Quelles langues parles-tu ?',
        'Quel est ton parcours en 3 points ?',
        "Qu'est-ce qui te motive au quotidien ?",
        'Comment as-tu réduit le temps de traitement de 35 à 40 % ?',
        'Quel rôle joue l\'automatisation dans ton travail ?'
      ];
      function hideSuggestions() {
        if (chatSuggestions) chatSuggestions.classList.add('is-hidden');
      }

      function sendMessage(text) {
        if (!text || !text.trim()) return;
        hideSuggestions();
        appendMessage('user', text.trim());
        if (chatInput) { chatInput.value = ''; autoResize(); }
        if (chatInput) chatInput.disabled = true;
        if (chatStatus) chatStatus.innerHTML = '<span class="chat-dots"><span></span><span></span><span></span></span>';
        var submitBtn = chatForm ? chatForm.querySelector('button[type="submit"]') : null;
        if (submitBtn) submitBtn.disabled = true;
        fetch('/api/chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message: text.trim(), history: chatHistory.slice(-20) }),
          cache: 'no-store'
        })
        .then(function(res) {
          return res.json().catch(function() { return {}; }).then(function(data) {
            if (!res.ok) throw new Error(data && data.error ? data.error : 'Erreur serveur');
            return data;
          });
        })
        .then(function(data) {
          var reply = data.reply || 'Je ne peux pas répondre pour le moment.';
          appendMessage('assistant', reply);
          chatHistory.push({ role: 'user', content: text.trim() }, { role: 'assistant', content: reply });
          if (chatStatus) chatStatus.innerHTML = '';
        })
        .catch(function(err) {
          if (chatStatus) chatStatus.textContent = err && err.message ? err.message : "Une erreur est survenue.";
        })
        .finally(function() {
          if (chatInput) chatInput.disabled = false;
          if (submitBtn) submitBtn.disabled = false;
          if (chatInput) chatInput.focus();
        });
      }

      if (suggestionCv) suggestionCv.addEventListener('click', function() { sendMessage('Résume-moi ton CV'); });
      if (suggestionRandom) suggestionRandom.addEventListener('click', function() {
        var q = randomCvQuestions[Math.floor(Math.random() * randomCvQuestions.length)];
        sendMessage(q);
      });

      function autoResize() {
        if (!chatInput) return;
        var style = getComputedStyle(chatInput);
        var lineHeight = parseFloat(style.lineHeight) || 20;
        var paddingY = (parseFloat(style.paddingTop) || 0) + (parseFloat(style.paddingBottom) || 0);
        var minH = lineHeight + paddingY;
        var maxH = lineHeight * 5;
        chatInput.style.height = 'auto';
        chatInput.style.height = Math.min(Math.max(chatInput.scrollHeight, minH), maxH) + 'px';
      }
      if (chatInput) {
        autoResize();
        chatInput.addEventListener('input', autoResize);
      }

      if (chatForm && chatInput) {
        chatInput.addEventListener('keydown', function(e) {
          if ((e.key === 'Enter' || e.keyCode === 13) && !e.shiftKey) {
            e.preventDefault();
            chatForm.requestSubmit();
          }
        });
        chatForm.addEventListener('submit', function(e) {
          e.preventDefault();
          var text = chatInput.value.trim();
          if (text) sendMessage(text);
        });
      }

      /* ---- Contact modal ---- */
      var contactOverlay = document.getElementById('contact-overlay');
      var contactClose = document.getElementById('contact-close');
      var contactForm = document.getElementById('contact-form');
